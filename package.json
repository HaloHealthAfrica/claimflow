{
  "name": "claimflow-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:components": "jest tests/components",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:clear-cache": "jest --clearCache",
    "db:init": "ts-node scripts/init-db.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && prisma db seed",
    "deploy": "railway up",
    "deploy:migrate": "railway run npx prisma migrate deploy",
    "deploy:seed": "railway run npx prisma db seed",
    "deploy:logs": "railway logs",
    "deploy:shell": "railway shell",
    "deploy:status": "railway status",
    "railway:start": "npx prisma migrate deploy && npx prisma generate && node server.js",
    "postbuild": "prisma generate",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/client-textract": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@google-cloud/vision": "^5.3.3",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@next/bundle-analyzer": "^15.5.4",
    "@prisma/client": "^5.22.0",
    "@sendgrid/mail": "^8.1.6",
    "@tailwindcss/postcss": "^4.1.14",
    "@tanstack/react-query": "^5.59.20",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.4",
    "firebase": "^12.3.0",
    "firebase-admin": "^13.5.0",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "next": "^15.5.4",
    "next-auth": "^4.24.10",
    "openai": "^4.104.0",
    "pdfkit": "^0.17.2",
    "postcss": "^8.5.1",
    "prisma": "^5.22.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pdfkit": "^0.17.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.6.8",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/tests/(.*)$": "<rootDir>/tests/$1"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{test,spec}.{js,jsx,ts,tsx}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/app/layout.tsx",
      "!src/app/globals.css"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "testTimeout": 10000,
    "transformIgnorePatterns": [
      "node_modules/(?!(.*\\.mjs$|@testing-library))"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globalSetup": "<rootDir>/tests/global-setup.ts",
    "globalTeardown": "<rootDir>/tests/global-teardown.ts",
    "testEnvironmentOptions": {
      "url": "http://localhost:3000"
    },
    "verbose": true,
    "clearMocks": true,
    "restoreMocks": true
  }
}
